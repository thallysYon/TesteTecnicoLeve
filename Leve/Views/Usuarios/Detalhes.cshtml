@model Leve.Models.Usuario

@{
    ViewData["Title"] = "Detalhes do usuário";
    var fotoUrl = string.IsNullOrWhiteSpace(Model.FotoNomeArquivo)
        ? null
        : Url.Content($"~/imagens/usuarios/{Model.FotoNomeArquivo}");
}

<div class="uk-section">
    <div class="uk-container uk-container-small">
        <div class="uk-flex uk-flex-between uk-flex-middle uk-margin-bottom">
            <div>
                <h1 class="uk-heading-bullet uk-margin-remove-bottom">Detalhes do usuário</h1>
                <p class="uk-text-muted uk-margin-small-top">
                    Consulte as informações completas do usuário selecionado.
                </p>
            </div>

            <div class="uk-flex uk-flex-middle uk-grid-small" uk-grid>
                <div>
                    <a asp-controller="Usuarios"
                       asp-action="Editar"
                       asp-route-id="@Model.Id"
                       class="uk-button uk-button-primary">
                        <span uk-icon="file-edit"></span>
                        <span class="uk-margin-small-left">Editar</span>
                    </a>
                </div>
                <div>
                    <a asp-controller="Usuarios"
                       asp-action="Index"
                       class="uk-button uk-button-default">
                        Voltar
                    </a>
                </div>
            </div>
        </div>

        <div class="uk-card uk-card-default uk-card-body uk-box-shadow-small">
            <div class="uk-grid-medium" uk-grid>
                <div class="uk-width-1-3@s uk-text-center">
                    @if (!string.IsNullOrWhiteSpace(fotoUrl))
                    {
                        <img src="@fotoUrl"
                             alt="Foto de @Model.NomeCompleto"
                             class="usuario-detalhes-foto" />
                    }
                    else
                    {
                        <div class="usuario-detalhes-foto-placeholder">
                            <span uk-icon="icon: user; ratio: 3"></span>
                        </div>
                    }
                </div>

                <div class="uk-width-2-3@s">
                    <h2 class="uk-margin-remove-bottom">@Model.NomeCompleto</h2>
                    <p class="uk-margin-small-top">
                        <span class="uk-label @(Model.IsGestor ? "uk-label-warning" : "")">
                            @(Model.IsGestor ? "Gestor" : "Colaborador")
                        </span>
                    </p>

                    <hr />

                    <p>
                        <strong>E-mail:</strong><br />
                        @Model.Email
                    </p>

                    <p>
                        <strong>Data de nascimento:</strong><br />
                        @(Model.DataNascimento?.ToString("dd/MM/yyyy") ?? "Não informada")
                    </p>

                    <p>
                        <strong>Telefone celular:</strong><br />
                        @(string.IsNullOrWhiteSpace(Model.TelefoneCelular) ? "Não informado" : Model.TelefoneCelular)
                    </p>

                    <p>
                        <strong>Telefone fixo:</strong><br />
                        @(string.IsNullOrWhiteSpace(Model.TelefoneFixo) ? "Não informado" : Model.TelefoneFixo)
                    </p>

                    <p class="uk-margin-remove-bottom">
                        <strong>Endereço:</strong><br />
                        @Model.Endereco
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>